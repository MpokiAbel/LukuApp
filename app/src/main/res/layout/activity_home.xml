<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7DBDD"
    tools:context=".Home">



    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundshape"
        android:gravity="center"/>

    <RelativeLayout
        android:id="@+id/content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/nunua"
            android:layout_width="180dp"
            android:layout_height="75sp"
            android:clickable="true"
            app:cardCornerRadius="100dp"
            >
            <ImageView
                android:background="#D7DBDD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/weka_salio"
            android:layout_width="180dp"
            android:layout_height="75sp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/nunua"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D7DBDD"
                android:src="@drawable/ic_account_balance_wallet_black_24dp" />

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nunua Luku"
            android:textSize="15dp"
            android:layout_marginLeft="50sp"
            android:layout_below="@id/nunua"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weka salio"
            android:textSize="15dp"
            android:layout_below="@id/weka_salio"
            android:layout_marginLeft="260sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/unit"
            android:layout_width="180dp"
            android:layout_height="75sp"
            android:clickable="true"

            >
            <ImageView
                android:layout_width="match_parent"
                android:background="#D7DBDD"
                android:layout_height="match_parent"
                android:src="@drawable/ic_flash_on_black_24dp"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/history"
            android:layout_width="180dp"
            android:layout_height="75sp"
            android:layout_toRightOf="@id/unit"
            android:layout_marginLeft="30dp"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D7DBDD"
                android:src="@drawable/ic_insert_chart_black_24dp"
                />


        </androidx.cardview.widget.CardView>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angalia Unit"
        android:textSize="15dp"
        android:layout_below="@id/unit"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historia"
            android:textSize="15dp"
            android:layout_below="@id/history"
            android:layout_marginLeft="275sp"/>

    </RelativeLayout>



</RelativeLayout>